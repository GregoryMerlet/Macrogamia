<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >

    <ImageView
        android:id="@+id/productDialogImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:elevation="2dp"/>

    <TextView
        android:id="@+id/productDialogName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/productDialogImage"
        android:elevation="2dp"
        android:textColor="@color/productDialogNameAndPrice"
        android:background="@color/productDialogNameAndPriceBackground"/>

    <TextView
        android:id="@+id/productDialogPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/productDialogName"
        android:elevation="2dp"
        android:textColor="@color/productDialogNameAndPrice"
        android:background="@color/productDialogNameAndPriceBackground"/>

    <TextView
        android:id="@+id/productDialogDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="7"
        android:scrollbars="vertical"
        android:text="Description"
        android:padding="10dp"
        android:layout_below="@+id/productDialogPrice"/>

    <TextView
        android:id="@+id/productDialogShopListText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/productDialogShopListText"
        android:textStyle="bold"
        android:textColor="@color/productDialogShopListText"
        android:background="@color/productDialogShopListTextBackground"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/productDialogDescription"/>

    <ListView
        android:id="@+id/productDialogShopList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productDialogShopListText" />

    <ImageButton
        android:id="@+id/productDialogButtonClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_black"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:layout_margin="0dp"
        android:elevation="5dp"/>

</RelativeLayout>