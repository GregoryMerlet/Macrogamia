<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >

    <TextView
        android:id="@+id/shopDialogName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:elevation="2dp"
        android:textColor="@color/shopDialogName"
        android:background="@color/shopDialogNameBackground"/>

    <TextView
        android:id="@+id/shopDialogAdress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adress"
        android:padding="10dp"
        android:layout_below="@+id/shopDialogName"/>

    <TextView
        android:id="@+id/shopDialogHoursListText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shopDialogHoursListText"
        android:textStyle="bold"
        android:textColor="@color/shopDialogHoursListText"
        android:background="@color/shopDialogHoursListTextBackground"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/shopDialogAdress"/>

    <ListView
        android:id="@+id/shopDialogHoursList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopDialogHoursListText"
        android:padding="10dp"/>

    <ImageButton
        android:id="@+id/shopDialogButtonClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_white"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:layout_margin="0dp"
        android:elevation="5dp"/>

</RelativeLayout>