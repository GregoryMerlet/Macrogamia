<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:elevation="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/advantageAdapterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Text"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/advantageAdapterCostAppendice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/advantageAdapterText"
            android:text="pts"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/advantageAdapterCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/advantageAdapterText"
            android:layout_toStartOf="@id/advantageAdapterCostAppendice"
            android:layout_marginEnd="5dp"
            android:text="Cost"
            android:textSize="30dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>